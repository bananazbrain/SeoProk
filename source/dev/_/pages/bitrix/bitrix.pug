extends ../../templates/default
block vars
	-
		title = "1С-Битрикс"

block content

	+style('intro', 'blocks')
	.intro.--bitrix
		.case
			.intro__wrap
				.intro__info
					.intro__title.h1.an.fadeIn-up #[h1 Новый 1С-Битрикс.#[br]Сиэтл]
					.intro__list.t1.list-ar.an.fadeIn(data-timeout="0.1s")
						ul
							li Бесплатный складской учёт в CRM
							li Виртуальный WhatsApp для продаж в мессенджере
							li Скрам для системной работы над проектами и многое другое
					.intro__desc.h6.an.fadeIn(data-timeout="0.2s") Все уже доступно!
				.intro__preview
					.intro__img.an.fadeIn(data-timeout="0.3s")
						img(src="_/uploads/bitrix-img.png", alt="")
				.intro__circle
					.intro__circle-item.an.fadeIn
						img(src="_/uploads/intro-circle.png", alt="").move(data-value="4")
					.intro__circle-item.an.fadeIn
						img(src="_/uploads/intro-circle-2.png", alt="").move(data-value="-3")
					.intro__circle-item.an.fadeIn
						img(src="_/uploads/intro-circle-3.png", alt="").move(data-value="6")
					.intro__circle-item.an.fadeIn
						img(src="_/uploads/intro-circle-4.png", alt="").move(data-value="3")
					.intro__circle-item.an.fadeIn
	
	+style('solution', 'blocks')
	include ../../blocks/solution/solution

	+style('price', 'blocks')
	.price.--bitrix
		.case
			.price__title.h3.an.fadeIn-up #[h3 Продукты]
			.price__list
				.price__list-wrap
					a.price__item(href="").an.fadeIn
						.price__info
							.price__rate
								.price__rate-icon
									img(src="_/uploads/icons/cube-1.svg", alt="")
								.price__rate-title Тариф
							.price__name.h5 #[h5 Битрикс24]
							.price__text Набор из пяти важных и полезных инструментов, которые помогают бизнесу работать.
						.price__main
							.price__desc
								.price__value #[u 25 000] руб./мес
								.price__note + РК бюджет
							.price__btn.btn.--green.--md Выбрать тариф
					a.price__item(href="").an.fadeIn(data-timeout="0.1s")
						.price__info
							.price__rate
								.price__rate-icon
									img(src="_/uploads/icons/cube-2.svg", alt="")
								.price__rate-title Тариф
							.price__name.h5 #[h5 Управление #[br]сайтом]
							.price__text Профессиональная система для создания, поддержки и успешного развития веб-проектов.
						.price__main
							.price__desc
								.price__value #[u 15 000] руб./мес
								.price__note + РК бюджет
							.price__btn.btn.--green.--md Выбрать тариф
					a.price__item(href="").an.fadeIn(data-timeout="0.2s")
						.price__info
							.price__rate
								.price__rate-icon
									img(src="_/uploads/icons/cube-2.svg", alt="")
								.price__rate-title Тариф
							.price__name.h5 #[h5 Интернет-#[br]магазин + CRM]
							.price__text Роботизированная eCommerce-платформа для создания совершенных интернет-магазинов.
						.price__main
							.price__desc
								.price__value #[u 5 000] руб./мес
								.price__note + анализ, отчёт
							.price__btn.btn.--green.--md Выбрать тариф
					a.price__item(href="").an.fadeIn(data-timeout="0.3s")
						.price__info
							.price__rate
								.price__rate-icon
									img(src="_/uploads/icons/cube-2.svg", alt="")
								.price__rate-title Тариф
							.price__name.h5 #[h5 Enterprise]
							.price__text Продукты и решения для крупного бизнеса, корпораций и государственных структур.
						.price__main
							.price__desc
								.price__value #[u 10 000] руб./мес
								.price__note + РК бюджет
							.price__btn.btn.--green.--md Выбрать тариф
			.price__pagination.swiper-pagination.an.fadeIn

	+style('steps', 'blocks')
	.steps.--bitrix
		.case
			.steps__title.h3.an.fadeIn-up #[h3 Почему именно «1С-Битрикс»?]
			.steps__list.an.fadeIn(data-timeout="0.1s")
				.steps__item
					.steps__img
						img(src="_/uploads/steps-1.svg", alt="")
					.steps__info
						.steps__name.h6 #[h6 Обновления и поддержка]
						.steps__desc Надёжная поддержка и постоянные обновления продуктов компании
				.steps__item
					.steps__img
						img(src="_/uploads/steps-10.svg", alt="")
					.steps__info
						.steps__name.h6 #[h6 Безопасность]
						.steps__desc Максимум возможностей для безопасности и безотказной работы
				.steps__item
					.steps__img
						img(src="_/uploads/steps-11.svg", alt="")
					.steps__info
						.steps__name.h6 #[h6 Российская разработка]
						.steps__desc Соответствие законодательству, огромное русcкоязычное сообщество разработчиков

	+style('pros', 'blocks')
	.pros.--bitrix
		.case
			.pros__title.h3.an.fadeIn-up #[h3 Наши преимущества в цифрах]
			.pros__list
				.pros__item.an.fadeIn
					.pros__name 275 000 +
					.pros__text Веб-проектов
				.pros__item.an.fadeIn(data-timeout="0.1s")
					.pros__name 21 +
					.pros__text Год на рынке
				.pros__item.an.fadeIn(data-timeout="0.2s")
					.pros__name 21 000 +
					.pros__text 21 000 + Партнёров
				.pros__item.an.fadeIn(data-timeout="0.3s")
					.pros__name 10 млн +
					.pros__text 10 млн + Компаний в Битрикс24

	+style('reg', 'blocks')
	.reg
		.case
			.reg__title.an.fadeIn-up Более 4 000 000 компаний зарегистрировано в 1С-Битрикс